<%- include('partials/header'); -%>
<section class="nav-container">
  <div class="container">
    <nav>
      <img src="/images/logo-white.png" alt="" />
      <ul>
        <li>About</li>
        <li>Newsletter</li>
        <li>Login</li>
      </ul>
    </nav>
  </div>
  <div class="watch-now">
    <h4>Kimi no Na Wa</h4>
    <p>2016 ‧ Drama/Fantasy ‧ 1h 52m</p>
    <button>Watch Now</button>
  </div>
